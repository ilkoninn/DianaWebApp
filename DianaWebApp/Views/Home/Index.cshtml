<script>
    document.addEventListener("DOMContentLoaded", function () {
        const tabs = document.querySelectorAll(".nav-link");
        const tabContent = document.querySelectorAll(".tab-pane");

        function setActiveTab(targetTabId) {
            tabContent.forEach(tabPane => {
                tabPane.classList.remove("show", "active");
            });

            document.getElementById(targetTabId).classList.add("show", "active");

            tabs.forEach(tab => {
                tab.classList.remove("active");
            });
            const activeTabButton = document.querySelector(`[aria-controls="${targetTabId}"]`);
            if (activeTabButton) {
                activeTabButton.classList.add("active");
            }
        }

        tabs.forEach(tab => {
            tab.addEventListener("click", function (event) {
                event.preventDefault();
                const targetTabId = this.getAttribute("aria-controls");

                if (targetTabId) {
                    setActiveTab(targetTabId);
                    localStorage.setItem("activeTabId", targetTabId);
                }
            });
        });

        const activeTabId = localStorage.getItem("activeTabId");
        if (activeTabId) {
            const activeTab = document.getElementById(activeTabId);
            if (activeTab) {
                setActiveTab(activeTabId);
            }
        }
    });

    function isValidEmail(email) {
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        return emailRegex.test(email);
    }

    document.getElementById("subscribeButton").addEventListener("click", function () {
        var email = document.getElementById("emailInput").value;
        var subscriptionAlert = document.getElementById("subscriptionAlert");
        var subscriptionMessage = document.getElementById("subscriptionMessage");

        email.trim();

        if (isValidEmail(email)) {
            document.getElementById("subscriptionMessage").textContent = "Your email has been sent successfully!";
            subscriptionMessage.style.color = "green";
            subscriptionAlert.classList.remove("alert-danger");
            subscriptionAlert.classList.add("alert-success");
            subscriptionAlert.removeAttribute("hidden");
        } else {
            document.getElementById("subscriptionMessage").textContent = "Please enter a valid email!";
            subscriptionAlert.classList.remove("alert-success");
            subscriptionAlert.classList.add("alert-danger");
            subscriptionMessage.style.color = "red";
            subscriptionAlert.removeAttribute("hidden");
        }

    });



</script>


