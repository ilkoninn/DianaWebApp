@model CreateCategoryVM

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="container">
            <h4 class="mb-5">Category Create</h4>
            <form method="post">
                <div class="col-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control">
                        <div style="color: red; margin-top: 10px; margin-left: 10px;">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                </div>

                <a asp-action="Table" asp-controller="Category">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button asp-controller="Category" asp-action="Table" class="btn btn-secondary">Cancel</button>
                </a>
            </form>
        </div>
    </div>
    <!-- content-wrapper ends -->
