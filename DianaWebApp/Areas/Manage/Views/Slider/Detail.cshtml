@model Slider

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="container">

            <h4 class="mb-1">Slider Title: </h4>
            <h3>@Model.Title</h3>
            <h4 class="mb-1">Slider Description: </h4>
            <h3>@Model.Description</h3>
            <h4 class="mb-1">Slider Image: </h4>
            <div style="width:200px">
                <img width="100%" src="~/Upload/SliderImages/@Model.ImgUrl">
            </div>

            <a asp-controller="Slider" asp-action="Table" class="btn btn-secondary mt-5">Go Back</a>

        </div>
    </div>
    <!-- content-wrapper ends -->
